pipeline {
    agent any
    environment {
        LABS = credentials('labcreds')
    }
    stages {
        stage('Setup') {
            steps {
                sh '''
                    python3 -m venv .venv
                    source .venv/bin/activate
                '''
            }
        }
        stage('Build') {
            steps {
                sh '''
                    pip install pipenv
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    pipenv run pytest
                '''
            }
        }
        stage('Package') {
            steps {
                sh 'zip -r retailproject.zip .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'sshpass -p $LABS_PSW scp -o StrictHostKeyChecking=no -r . $LABS_USR@g02.itversity.com:/home/itv005913/retailproject'
            }
        }
    }
}

